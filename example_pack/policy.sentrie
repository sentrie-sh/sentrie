namespace user_management

shape User {
  role: string
  status: string
}

policy user_access {

  fact user:User

  rule allow_admin = {
    yield user.role == "admin"
  }

  rule allow_user = {
    yield allow_admin or user.role == "user" and user.status == "active"
  }

  export decision of allow_admin
  export decision of allow_user
}

