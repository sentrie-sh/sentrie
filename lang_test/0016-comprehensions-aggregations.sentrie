namespace comprehensions
policy comp {
	let nums        = [1, 2, 3, 4, 5]
	let existsEven  = any nums as n { yield n % 2 == 0 }
	let allPos      = all nums as n { yield n > 0 }
	let evens       = filter nums as n { yield n % 2 == 0 }
	let doubled     = map nums as n { yield n * 2 }
	let uniq        = distinct nums as n { yield n }
	let sum         = reduce 0 from nums as acc, n { yield acc + n }
	let sum         = reduce 0 from nums as acc, n, idx { yield acc + n } -- Reduce with collection,accumulator,valueIterator and indexIterator
	let total       = count nums
  let total       = count(nums)
	let complex     = any nums as n { yield n > 3 and n < 5 }
	let advanced    = all nums as n { yield n % 2 == 0 or n > 3 }
	let nested      = filter nums as n { yield n > 2 and n < 5 }
	let mapped      = map nums as n { yield n * 3 }
	let unique      = distinct nums as n { yield n % 2 == 0 }
	let summed      = reduce 0 from nums as acc, n { yield acc + n * 2 }
	let counted     = count nums
}