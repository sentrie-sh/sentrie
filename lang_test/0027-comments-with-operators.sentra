namespace commentmix
-- file header
policy mix {
	-- inner note
	let r = (5 + 3 * 2) xor (not false and true) ? -- a trailing comment
	        "yes" -- yes trailing comment
          :     -- operator trailing comment
          "no"  -- no trailing comment

  let y = 5 -- a trailing comment
            + -- operator trailing comment
            -- a line with comment
            -- another line with comment
              3 -- another trailing comment
}